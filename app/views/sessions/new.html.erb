<div id="doc" class="simple">
	<div id="main">
		<section id="login">
			<%= form_for(:session, url: sessions_path) do |f| %>

				<header>
					<h1>iParkings</h1>
				</header>

				<div class="row">
					<%= f.label :email, "E-mail" %>
	      	<%= f.text_field :email, :class => "input-text expand" %>
				</div>

	      <div class="row">
					<%= f.label :password %>
	      	<%= f.password_field :password, :class => "input-text expand" %>
	      </div>
	      
	      <footer>
	      	<div class="row">
						<%= f.submit "Login", class: "button orange large full-width" %>
	      	</div>
	      	<div class="row">

	      	</div>
	      	
	      </footer>

	    <% end %>
		</section>
	</div>
</div>